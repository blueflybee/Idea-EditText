<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F0F0"
    android:orientation="vertical"
    tools:context="idea.analyzesystem.android.edittext.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#159bd4"
        android:gravity="center"
        android:text="Idea-EditText"
        android:textColor="#FFFFFF"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:padding="4dp"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <idea.analyzesystem.android.edittext.mac.MacEditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:padding="4dp"
            android:singleLine="true"
            android:textColor="#888888"
            android:textSize="16sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="4dp"
            android:text=":"
            android:textSize="16sp"
            android:textColor="#444444"
            android:gravity="center"/>

        <idea.analyzesystem.android.edittext.mac.MacEditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:padding="4dp"
            android:singleLine="true"
            android:textColor="#888888"
            android:textSize="16sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="4dp"
            android:text=":"
            android:textSize="16sp"
            android:textColor="#444444"
            android:gravity="center"/>

        <idea.analyzesystem.android.edittext.mac.MacEditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:padding="4dp"
            android:singleLine="true"
            android:textColor="#888888"
            android:textSize="16sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="4dp"
            android:text=":"
            android:textSize="16sp"
            android:textColor="#444444"
            android:gravity="center"/>

        <idea.analyzesystem.android.edittext.mac.MacEditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:padding="4dp"
            android:singleLine="true"
            android:textColor="#888888"
            android:textSize="16sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="4dp"
            android:text=":"
            android:textSize="16sp"
            android:textColor="#444444"
            android:gravity="center"/>

        <idea.analyzesystem.android.edittext.mac.MacEditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:padding="4dp"
            android:singleLine="true"
            android:textColor="#888888"
            android:textSize="16sp"/>

    </LinearLayout>

    <idea.analyzesystem.android.edittext.mac.MacView
        android:id="@+id/MacView"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:padding="4dp"
        android:layout_margin="10dp"/>

    <idea.analyzesystem.android.edittext.ip.IPEditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#FFFFFF"
        android:focusableInTouchMode="true"
        android:gravity="center"
        android:padding="4dp"
        android:singleLine="true"
        android:textColor="#888888"
        android:textSize="16sp"/>
        />

    <idea.analyzesystem.android.edittext.ip.IPView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:padding="4dp"
        android:layout_margin="10dp"/>
</LinearLayout>
